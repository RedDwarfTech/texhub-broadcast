{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@controllers/*": ["src/controllers/*"],
      "@websocket/*": ["src/websocket/*"],
      "@common/*": ["src/common/*"],
      "@model/*": ["src/model/*"],
      "@collar/*": ["src/collar/*"],
      "@storage/*": ["src/storage/*"],
      "@texhub/*": ["src/texhub/*"]
    },
    "lib": ["DOM", "ES2021.String"],
    "sourceMap": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "files": ["src/app.ts"],
  "ts-node": {
    "esm": true,
    "require": ["tsconfig-paths/register"]
  }
}
