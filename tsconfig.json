{
    "compilerOptions": {
      "target": "ES2020",
      "module": "esnext",
      "moduleResolution": "bundler",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
    },
    "baseUrl": "./src",
    "paths": {
      "*": ["*"]
    },
    "include": ["src/**/*"],
    "files": ["src/app.ts"]
  }